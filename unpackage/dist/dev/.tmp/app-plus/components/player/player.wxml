<block wx:if="{{songList.length}}"><view class="player-main"><block wx:for="{{songList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{songId==item.id}}"><view data-event-opts="{{[['tap',[['goMusic']]]]}}" class="player-song" bindtap="__e"><image style="{{(paused?'animation: rotate 4s infinite linear running;':'animation: rotate 4s infinite linear paused;')}}" src="{{item.al.picUrl+'?param=50y50'}}"></image><view><view class="player-name">{{item.name}}</view><view class="player-author">{{item.ar[0].name}}</view></view></view></block></block><view class="player-control"><text data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="{{[paused?'iconfont icon-pause':'iconfont icon-play']}}" bindtap="__e"></text><text data-event-opts="{{[['tap',[['open',['$event']]]]]}}" class="iconfont icon-sort" bindtap="__e"></text></view><uni-popup class="vue-ref" vue-id="1" type="bottom" data-ref="popup" bind:__l="__l" vue-slots="{{['default']}}"><view class="player-popup"><view class="player-popup-header"><text>{{"循环列表 ("+songList.length+")"}}</text><text data-event-opts="{{[['tap',[['clear',['$event']]]]]}}" class="iconfont icon-delete" bindtap="__e"></text></view><view class="player-popup-content"><block wx:for="{{songList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="player-popup-list"><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="{{[item.id===songId?'player-list-detail active':'player-list-detail']}}" bindtap="__e"><text style="font-size:32rpx;">{{item.name}}</text><text style="font-size:24rpx;color:#848484;">{{" - "+item.ar[0].name}}</text></view><text data-event-opts="{{[['tap',[['deleteSongId',['$0'],[[['songList','',index,'id']]]]]]]}}" class="iconfont icon-delete1" bindtap="__e"></text></view></block></view></view></uni-popup></view></block>